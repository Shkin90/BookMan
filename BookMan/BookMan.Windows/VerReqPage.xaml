<Page
    x:Class="BookMan.VerReqPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BookMan"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#f8e8bf">
        <TextBlock x:Name="title" Text="BookMan" Foreground="#9b2121" FontSize="48" Margin="75,117,0,0" />
        <Button x:Name="back" HorizontalAlignment="Left" Margin="75,65,0,0" VerticalAlignment="Top" Style="{StaticResource NavigationBackButtonNormalStyle}" Click="button_Click" />

        <TextBlock x:Name="instruction" Text="Introduza o número do utente:" Foreground="#9b2121" FontSize="36" Margin="75,317,0,0" />
        <TextBox x:Name="user_id" HorizontalAlignment="Left" Margin="75,375,0,0" TextWrapping="Wrap" VerticalAlignment="Top" InputScope="Number"/>
        <Button x:Name="submit" Content="Pesquisar" HorizontalAlignment="Left" Margin="75,420,0,0" VerticalAlignment="Top" Background="#FFE0A25D" Foreground="#9b2121" BorderBrush="{x:Null}" Click="submit_Click" />
    </Grid>
</Page>
